{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/tests/*": ["tests/*"]
    },
    "strict": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
